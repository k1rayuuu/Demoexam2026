<UserControl x:Class="Exam2026.ViewOrdersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam2026"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding Items}" BorderThickness="2" BorderBrush="Black"
                 HorizontalAlignment="Center">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="500" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Margin="5">

                            <StackPanel Orientation="Vertical" >
                                <TextBlock FontWeight="Black" Text="{Binding Артикул_заказа}"/>
                                <TextBlock Text="{Binding Статус_заказа}"/>
                                <TextBlock Text="{Binding Адрес_пункта_выдачи}"/>
                                <TextBlock Text="{Binding Дата_заказа}"/>
                            </StackPanel>
                        </Border>
                        <Border Width="132" Height="72" Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="5">
                            <StackPanel>
                                <TextBlock Text="{Binding Дата_доставки}" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
