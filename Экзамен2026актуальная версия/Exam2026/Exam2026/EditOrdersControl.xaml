<UserControl x:Class="Exam2026.EditOrdersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam2026"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>

            <StackPanel Orientation="Vertical">
                <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер заказа" Binding="{Binding Номер_заказа}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Артикул заказа" Binding="{Binding Артикул_заказа}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Дата заказа" Binding="{Binding Дата_заказа}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Дата доставки" Binding="{Binding Дата_доставки}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Адрес ПВЗ" Binding="{Binding Адрес_пункта_выдачи}"></DataGridTextColumn>
                        <DataGridTextColumn Header="ФИО авторизованного клиента" Binding="{Binding ФИО_авторизированного_клиента}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Код для получения" Binding="{Binding Код_для_получения}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Статус заказа" Binding="{Binding Статус_заказа}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button   Margin="10" Click="SaveButtonClick" Width="100"  Height="30">Save</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
