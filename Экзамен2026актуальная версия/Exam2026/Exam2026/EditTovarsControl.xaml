<UserControl x:Class="Exam2026.EditTovarsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam2026"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            
        <StackPanel Orientation="Vertical">
            <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Артикул}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Наименование_товара" Binding="{Binding Наименование_товара}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Единица_измерения" Binding="{Binding Единица_измерения}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Цена}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Поставщик" Binding="{Binding Поставщик}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Производитель" Binding="{Binding Производитель}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Категория_товара" Binding="{Binding Категория_товара}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Действующая_скидка" Binding="{Binding Действующая_скидка}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Кол_во_на_складе" Binding="{Binding Кол_во_на_складе}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Описание_товара" Binding="{Binding Описание_товара}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button   Margin="10" Click="SaveButtonClick" Width="100"  Height="30">Save</Button>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
